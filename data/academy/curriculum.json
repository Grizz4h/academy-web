          }
        },
        {
          "id": "A4",
          "title": "Faceoffs & Set-Plays Grundlagen",
          "summary": "Gewonnene und verlorene Faceoffs, Standard-Reaktionen",
          "description": "Du lernst Faceoff-Zonen und Standardreaktionen. Du erkennst: 'Gewonnen aber verloren' (z.B. sofort Turnover).",
          "learningGoals": [
            "Erkenne Faceoff-Zonen und Ergebnisse",
            "Beobachte 5-Sekunden-Outcome nach Faceoff",
            "Erkenne Set-Plays"
          ],
          "recommendedSessionMethod": "event-tracking",
          "defaultFocus": "Transition",
          "difficulty": 2,
          "duration": 45,
          "drills": [
            {
              "id": "A4_D1",
              "title": "Faceoff Log",
              "drill_type": "period_checkin",
