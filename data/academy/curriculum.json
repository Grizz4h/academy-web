          }
        },
        {
          "id": "A5",
          "title": "Kommunikation & Bench-Management",
          "summary": "Team-Kommunikation, Shift-Disziplin, Callouts",
          "description": "Du erkennst, wie Teams kommunizieren: Wechsel, Callouts, Struktur. Du trainierst 'Bench-Reads': warum jemand wechselt / warum Shift zu lang wird.",
          "learningGoals": [
            "Erkenne Wechsel-Muster und Timing",
            "Spot-Fehler: zu lange Shifts, Timing-Probleme",
            "Erkenne Kommunikation und Callouts"
          ],
          "recommendedSessionMethod": "pattern-spotting",
          "defaultFocus": "Team",
          "difficulty": 2,
          "duration": 45,
          "drills": [
            {
              "id": "A5_D1",
              "title": "Shift Discipline Check",
              "drill_type": "period_checkin",
              "description": "Pro Drittel: zu lange Shifts? Konsequenzen?"
            }
          ],
          "evaluation": {
            "metrics": ["shift_length_violations", "communication_observations"],
            "reportType": "team_discipline_report"
          }
        }
      ]
    },
